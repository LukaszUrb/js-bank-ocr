{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "suppressImplicitAnyIndexErrors": true,
        "allowJs": true,
        "downlevelIteration": true,
        "outDir": "./dist",
    },
    "exclude": [
        "node_modules",
        "spec"
    ]
}